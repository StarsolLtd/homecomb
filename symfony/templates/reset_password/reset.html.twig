{% extends 'login-base.html.twig' %}

{% block title %}{{ site_name }} - Reset Password{% endblock %}

{% block body %}
    <div class="login-form">
        {{ form_start(resetForm) }}

        <div class="avatar">
            <img src="/images/avatar.png">
        </div>

        <h2 class="text-center">Reset Password</h2>

        <p>Please enter your desired new password below:</p>

        <div class="form-group">
            {{ form_widget(resetForm.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Enter new password'}}) }}
            <div class="form-error">
                {{ form_errors(resetForm.plainPassword.first) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_widget(resetForm.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repeat new password'}}) }}
            <div class="form-error">
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Reset password</button>
        </div>

        <div class="bottom-action clearfix"></div>

        {{ form_end(resetForm) }}
    </div>
{% endblock %}
