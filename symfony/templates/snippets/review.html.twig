<div class="reviews-members pt-4 pb-4">
    <div class="dropdown float-right">
        <button class="btn btn-light btn-ellipsis" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">&hellip;</button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item flag-review-link" data-entity-id="{{ review.id }}" href="#" data-toggle="modal" data-target="#flag-review-modal"><span class="fa fa-flag"></span> Report this</a>
        </div>
    </div>
    <div class="reviews-members-header">
        <p class="mb-1 font-weight-bold">
            <span class="author">{{ review.author }}</span>
            {% if (review.property and hideProperty is not defined) %}
                review of <a href="{{ path('property-view-by-slug', {slug: review.property.slug}) }}">{{ review.property.addressLine1  }}, {{ review.property.postcode }}</a>
            {%  endif %}
        </p>
        <p class="text-gray">{{ review.createdAt|date('jS F Y') }}</p>
    </div>
    <div class="reviews-members-body">
        <p class="font-weight-bold">{{ review.title }}</p>

        <p>{{ review.content }}</p>

        {% if ((review.branch and hideBranch is not defined) or (review.agency and hideAgency is not defined)) %}
            <p>
                {% if (review.agency and hideAgency is not defined) %}
                    Agency:
                    {% if review.agency.isPublished %}<a href="{{ path('agency-view-by-slug', {slug: review.agency.slug}) }}">{%  endif %}
                    {{ review.agency.name }}
                    {% if review.agency.isPublished %}</a>{%  endif %}
                    <br>
                {%  endif %}
                {% if (review.branch and hideBranch is not defined) %}
                    Branch:
                    {% if review.branch.isPublished %}<a href="{{ path('branch-view-by-slug', {slug: review.branch.slug}) }}">{%  endif %}
                    {{ review.branch.name }}
                    {% if review.branch.isPublished %}</a>{%  endif %}
                {%  endif %}
            </p>
        {%  endif %}
    </div>
    {% include 'snippets/review-stars.html.twig' with {'review': review} %}
</div>
